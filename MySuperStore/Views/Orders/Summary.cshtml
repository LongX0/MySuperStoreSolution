@model IEnumerable<MySuperStore.Models.Orders.OrderSummaryViewModel>

<h2>Order Summary</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Product Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.ProductCount</td>
            </tr>
        }
    </tbody>
</table>
